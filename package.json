{
  "name": "FS_React_Boilerplate",
  "version": "0.0.1",
  "description": "",
  "main": "app/main.jsx",
  "scripts": {
    "lint": "esw server/* index",
    "lint:msg": "validate-commit-msg",
    "test": "mocha --compilers js:babel-core/register --recursive",
    "test:watch": "npm run test -- --watch",
    "build": "nodemon --exec \"npm start\"",
    "start": "NODE_ENV=development babel-node index --inspect",
    "deploy": "NODE_ENV=production webpack --config webpack.production.config.js  && NODE_ENV=production node index",
    "deploy-windows": "SET NODE_ENV=production & webpack --config webpack.production.config.js",
    "validate": "npm ls",
    "commit": "git cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1"
  },
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-runtime": "6.x",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "connect-redis": "^3.2.0",
    "css-loader": "^0.23.1",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "flexboxgrid": "^6.3.1",
    "html-webpack-plugin": "^2.26.0",
    "jquery": "^3.1.1",
    "material-ui": "^0.16.6",
    "react": "15.x",
    "react-css-modules": "^3.7.10",
    "react-dom": "15.x",
    "react-flexbox-grid": "^0.10.2",
    "react-redux": "4.4.5",
    "react-router": "^3.0.0",
    "react-skylight": "0.4.0",
    "react-tap-event-plugin": "^2.0.1",
    "react-textfit": "^0.1.8",
    "redis": "^2.6.3",
    "redux": "3.5.2",
    "redux-logger": "^2.6.1",
    "socket.io-client": "1.4.8",
    "stats-webpack-plugin": "^0.4.2",
    "style-loader": "^0.13.1",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "babel-core": "6.x",
    "babel-eslint": "6.x",
    "babel-loader": "6.x",
    "babel-plugin-transform-runtime": "6.x",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "6.x",
    "babel-preset-stage-0": "6.x",
    "chai": "^3.5.0",
    "commitizen": "^2.5.0",
    "conventional-changelog-cli": "1.x",
    "copy-webpack-plugin": "latest",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-flowtype": "^2.29.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsx-a11y": "2.x",
    "eslint-plugin-react": "latest",
    "ghooks": "^1.0.3",
    "mocha": "^3.2.0",
    "npm": "^4.0.5",
    "open-browser-webpack-plugin": "0.0.2",
    "react-hot-loader": "^1.3.1",
    "style-loader": "^0.13.1",
    "validate-commit-msg": "2.x",
    "webpack": "latest",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-dev-server": "latest",
    "webpack-hot-middleware": "^2.15.0"
  },
  "keywords": [
    "es6",
    "web app",
    "boilerplate",
    "react"
  ],
  "author": "Zebrev Nickolai",
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "npm run lint:msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
